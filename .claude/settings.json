{
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/file-modified.sh",
            "type": "command"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/post-command.sh",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/pre-command.sh",
            "type": "command"
          }
        ],
        "matcher": "*"
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/session-end.sh",
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/session-start.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "command": "$CLAUDE_PROJECT_DIR/.spcstr/hooks/user-prompt-submit.sh",
            "type": "command"
          }
        ],
        "matcher": ""
      }
    ]
  }
}
